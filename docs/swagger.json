            "properties": {
                "breed": {
                    "type": "string",
                    "enum": [
                        "sphynx",
                        "british",
                        "persian",
                        "maine_coon",
                        "siamese",
                        "bengal",
                        "ragdoll"
                    ]
                },
                "name": {
                    "type": "string",
                    "maxLength": 64,
                    "minLength": 2
                },
                "salary": {
                    "type": "number",
                    "maximum": 1000000,
                    "minimum": 0
                },
                "years_experience": {
                    "type": "integer",
                    "maximum": 60,
                    "minimum": 0
                }
            }
        },
        "dto.CreateCatResponse": {
            "type": "object",
            "properties": {
